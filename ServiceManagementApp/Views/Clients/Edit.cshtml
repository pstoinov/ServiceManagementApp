@model ServiceManagementApp.ViewModels.EditClientViewModel

<h1>Редактирай клиент</h1>

<form id="editClientForm">
    <input type="hidden" id="clientId" value="@Model.Id" />

    <div class="form-group">
        <label for="fullName">Име</label>
        <input type="text" class="form-control" id="fullName" name="FullName" value="@Model.FullName" required />
    </div>

    <div class="form-group">
        <label for="phone">Телефон</label>
        <input type="text" class="form-control" id="phone" name="Phone" value="@Model.Phone" required />
    </div>

    <div class="form-group">
        <label for="email">Емейл</label>
        <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" required />
    </div>

    <button type="button" id="saveClientBtn" class="btn btn-primary">Запази промените</button>
</form>

@section Scripts {
    <script src="~/js/editClient.js"></script>
}
