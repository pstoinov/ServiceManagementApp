@model ServiceManagementApp.ViewModels.EditClientViewModel

<h1>Редактирай клиент</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <h3>Свързани фирми</h3>
    <ul>
        @foreach (var company in Model.Companies)
        {
            <li>
                @company.CompanyName - @company.EIK
                <a href="@Url.Action("EditCompany", new { companyId = company.Id })" class="btn btn-sm btn-info">Редактирай</a>
                <a href="@Url.Action("DeleteCompany", new { companyId = company.Id })" class="btn btn-sm btn-danger">Изтрий</a>
            </li>
        }
    </ul>

    <button type="submit" class="btn btn-primary">Запази промените</button>
</form>

<a href="@Url.Action("AddCompany", new { clientId = Model.Id })" class="btn btn-secondary">Добави фирма</a>
