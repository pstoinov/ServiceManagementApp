@model IEnumerable<ServiceManagementApp.ViewModels.ClientViewModel>

<h1>Списък с клиенти</h1>

<table id="dataTable" class="table">
    <thead>
        <tr>
            <th>Име</th>
            <th>Телефон</th>
            <th>Email</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.FullName</td>
                <td>@client.Phone</td>
                <td>@client.Email</td>
                <td>
                    <!-- Икона за редактиране на клиент -->
                    <a href="@Url.Action("Edit", "Clients", new { clientId = client.Id })" class="btn btn-sm btn-info" title="Редактирай клиент">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-action="Create">Нов клиент</a>

@section sidebar {
    <div class="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Clients" asp-action="Index">Текущи клиенти</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Clients" asp-action="Create">Нов клиент</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Clients" asp-action="Reports">Справки</a>
            </li>
        </ul>
    </div>
}
