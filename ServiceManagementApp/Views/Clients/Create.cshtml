@model ServiceManagementApp.ViewModels.ClientViewModel

<h1>Нов клиент</h1>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FullName">Име</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone">Телефон</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email адрес</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Създай</button>
</form>
