@model ServiceManagementApp.ViewModels.EmployeeViewModel

<h1>@Model.FullName's Dossier</h1>

<div class="row">
    <div class="col-md-3">
        <!-- Employee Picture -->
        <img src="@Model.PictureUrl" class="img-fluid rounded-circle" alt="@Model.FullName" />
    </div>
    <div class="col-md-9">
        <!-- Employee Details -->
        <table class="table table-bordered">
            <tr>
                <th>Full Name:</th>
                <td>@Model.FullName</td>
            </tr>
            <tr>
                <th>Service Name:</th>
                <td>@Model.ServiceName</td>
            </tr>
            <tr>
                <th>Position:</th>
                <td>@Model.Position.ToString()</td>
            </tr>
            <tr>
                <th>Phone Number:</th>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <th>Email Address:</th>
                <td>@Model.EmailAddress</td>
            </tr>
            <tr>
                <th>Certified for Cash Register Repairs:</th>
                <td>@Model.IsCertifiedForCashRegisterRepair ? "Yes" : "No"</td>
            </tr>
        </table>

        <!-- Tabs for Requests, Repairs, and Cash Register Repairs -->
        <ul class="nav nav-tabs" id="employeeTabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="requests-tab" data-bs-toggle="tab" href="#requests" role="tab" aria-controls="requests" aria-selected="true">Requests</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="repairs-tab" data-bs-toggle="tab" href="#repairs" role="tab" aria-controls="repairs" aria-selected="false">Repairs</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="cashRegisterRepairs-tab" data-bs-toggle="tab" href="#cashRegisterRepairs" role="tab" aria-controls="cashRegisterRepairs" aria-selected="false">Cash Register Repairs</a>
            </li>
        </ul>
        <div class="tab-content" id="employeeTabsContent">
            <div class="tab-pane fade show active" id="requests" role="tabpanel" aria-labelledby="requests-tab">
                <!-- Request list content -->
                <p>No requests available.</p>
            </div>
            <div class="tab-pane fade" id="repairs" role="tabpanel" aria-labelledby="repairs-tab">
                <!-- Repair list content -->
                <p>No repairs available.</p>
            </div>
            <div class="tab-pane fade" id="cashRegisterRepairs" role="tabpanel" aria-labelledby="cashRegisterRepairs-tab">
                <!-- Cash Register Repair list content -->
                <p>No cash register repairs available.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
}
