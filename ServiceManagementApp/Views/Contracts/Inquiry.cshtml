@{
    ViewBag.Title = "Генериране на FiscalSer файл";
}

<h2>Генериране на FiscalSer файл</h2>

<form asp-action="GenerateFiscalSerFile" method="post">
    <div class="form-group">
        <label for="month">Месец:</label>
        <select id="month" name="month" class="form-control" asp-items="ViewBag.Months"></select>
    </div>

    <div class="form-group">
        <label for="year">Година:</label>
        <select id="year" name="year" class="form-control" asp-items="ViewBag.Years"></select>
    </div>

    <button type="submit" class="btn btn-primary">Генерирай FiscalSer файл</button>
</form>
