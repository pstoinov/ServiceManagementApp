@model ServiceManagementApp.ViewModels.EmployeeViewModel

<h1>Edit Employee</h1>

<form id="employeeForm" enctype="multipart/form-data">
    <input type="hidden" id="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="FullName">Имена на служител</label>
        <input type="text" class="form-control" id="FullName" name="FullName" value="@Model.FullName" required />
    </div>

    <div class="form-group">
        <label for="ServiceId">Сервиз</label>
        <select id="ServiceId" class="form-control" asp-items="ViewBag.Services"></select>
    </div>

    <div class="form-group">
        <label for="Position">Позоция</label>
        <select id="Position" class="form-control" asp-items="ViewBag.Positions"></select>
    </div>

    <div class="form-group">
        <label for="EmailAddress">Email адрес</label>
        <input type="email" class="form-control" id="EmailAddress" name="EmailAddress" value="@Model.EmailAddress" required />
    </div>

    <div class="form-group">
        <label for="PhoneNumber">Телефон</label>
        <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" required />
    </div>

    <div class="form-group">
        <label for="IsCertifiedForCashRegisterRepair">Има ли разрешително за ремонт на касови апарати</label>
        <input type="checkbox" id="IsCertifiedForCashRegisterRepair" name="IsCertifiedForCashRegisterRepair" value="true" />
    </div>

    <div class="form-group">
        <label for="EGN">ЕГН</label>
        <input type="text" class="form-control" id="EGN" name="EGN" value="@Model.EGN" required />
    </div>

    <div class="form-group">
        <label for="PictureUpload">Качи снимка</label>
        <input type="file" class="form-control" id="PictureUpload" name="PictureUpload" accept="image/*" />
    </div>

    <button type="button" id="saveEmployeeBtn" class="btn btn-primary">Запази</button>
</form>

@section Scripts {
    <script src="~/js/employee.js"></script>
}
