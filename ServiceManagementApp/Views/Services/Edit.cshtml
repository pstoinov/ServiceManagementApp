@model ServiceManagementApp.ViewModels.ServiceViewModel

<h1>Редактирай сервиза</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
    <label asp-for="ServiceName">Име на сервиза</label>
    <input asp-for="ServiceName" class="form-control" />
    <span asp-validation-for="ServiceName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EIK">ЕИК</label>
        <input asp-for="EIK" class="form-control" />
        <span asp-validation-for="EIK" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VATNumber">ДДС Номер</label>
        <input asp-for="VATNumber" class="form-control" />
        <span asp-validation-for="VATNumber" class="text-danger"></span>
    </div>

    <h4>Адрес на фирмата</h4>

    <div class="form-group">
        <label asp-for="City">Град</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Street">Улица</label>
        <input asp-for="Street" class="form-control" />
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Number">Номер</label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Block">Блок</label>
        <input asp-for="Block" class="form-control" />
        <span asp-validation-for="Block" class="text-danger"></span>
    </div>

    <h4>Контактна информация</h4>

    <div class="form-group">
        <label asp-for="PhoneNumber">Телефонен номер</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmailAddress">Email адрес</label>
        <input asp-for="EmailAddress" class="form-control" />
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LogoUrl">Лого URL</label>
        <input asp-for="LogoUrl" class="form-control" />
        <span asp-validation-for="LogoUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsCashRegisterService" class="control-label">Сервиз за касови апарати</label>
        <input asp-for="IsCashRegisterService" class="form-check-input" type="checkbox" />
        <span asp-validation-for="IsCashRegisterService" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Запази промените</button>
    <form asp-action="Delete" method="post" onsubmit="return confirm('Сигурни ли сте, че искате да изтриете този сервиз?');" class="d-inline">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Изтрий сервиза</button>
    </form>
    
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section sidebar {
    <div class="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Employees" asp-action="Index">Служители</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Services" asp-action="Index">Сервизи</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Clients" asp-action="Index">Справки</a>
            </li>
        </ul>
    </div>
}
