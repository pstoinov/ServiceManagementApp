@model ServiceManagementApp.ViewModels.EditCompanyViewModel

<h1>Edit Company Details</h1>

<form id="editCompanyForm">
    <input type="hidden" id="companyId" value="@Model.Id" />

    <div class="form-group">
        <label for="companyName">Company Name</label>
        <input type="text" class="form-control" id="companyName" name="CompanyName" value="@Model.CompanyName" required />
    </div>

    <div class="form-group">
        <label for="eik">EIK</label>
        <input type="text" class="form-control" id="eik" name="EIK" value="@Model.EIK" required />
    </div>

    <div class="form-group">
        <label for="vatNumber">VAT Number</label>
        <input type="text" class="form-control" id="vatNumber" name="VATNumber" value="@Model.VATNumber" />
    </div>

    <div class="form-group">
        <label for="phone">Phone</label>
        <input type="text" class="form-control" id="phone" name="Phone" value="@Model.Phone" required />
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" required />
    </div>

    <h3>Associated Clients</h3>
    <ul id="clientsList">
        @foreach (var client in Model.Clients)
        {
            <li>@client.FullName</li>
        }
    </ul>

    <button type="button" id="saveCompanyBtn" class="btn btn-primary">Save Changes</button>
</form>

@section Scripts {
    <script src="~/js/EditCompany.js"></script>
}
