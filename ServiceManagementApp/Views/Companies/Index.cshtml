@model IEnumerable<ServiceManagementApp.ViewModels.CompanyViewModel>

<h1>Списък с фирми</h1>

<table class="table">
    <thead>
        <tr>
            <th>Име на фирма</th>
            <th>ЕИК</th>
            <th>ДДС Номер</th>
            <th>Телефон</th>
            <th>Email</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td>@company.CompanyName</td>
                <td>@company.EIK</td>
                <td>@company.VATNumber</td>
                <td>@company.Phone</td>
                <td>@company.Email</td>
                <td>
                    <a href="@Url.Action("AssociateClient", "Companies", new { companyId = company.Id })" class="btn btn-sm btn-primary" title="Associate Client">
                        <i class="fas fa-user-plus"></i> 
                    </a>
                    <a href="@Url.Action("Edit", "Companies", new { companyId = company.Id })" class="btn btn-sm btn-info" title="Edit Company">
                        <i class="fas fa-edit"></i>
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>

@section sidebar {
    <div class="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Companies" asp-action="Index">Списък с фирми</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Companies" asp-action="Create">Нова фирма</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Companies" asp-action="Edit">Редакция на фирма</a>
            </li>
        </ul>
    </div>
}
