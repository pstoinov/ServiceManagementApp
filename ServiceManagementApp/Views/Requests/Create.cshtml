@model ServiceManagementApp.ViewModels.RequestViewModel
@{
    ViewBag.Title = "Създаване на заявка за сервиз";
}

<h2>Създаване на заявка за сервиз</h2>

<form asp-action="Create" method="post">
    <!-- Поле за номер на заявка -->
    <div class="form-group">
        <label for="RequestNumber">Номер на заявка</label>
        <input type="text" class="form-control" id="RequestNumber" name="RequestNumber" value="@Model.RequestNumber" readonly />
        <span asp-validation-for="RequestNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="clientSearch">Търсене на клиент</label>
        <input type="text" id="clientSearch" class="form-control" placeholder="Въведете име, телефон или имейл на клиент" />
        <input type="hidden" asp-for="ClientId" id="ClientId" />
        <span asp-validation-for="ClientId" class="text-danger"></span>
    </div>
    <!-- Полета за клиента -->
    <div class="form-group">
        <label for="ClientName">Име на клиент</label>
        <input type="text" class="form-control" id="ClientName" name="ClientName" required />
        <span asp-validation-for="ClientName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ClientPhone">Телефон на клиент</label>
        <input type="text" class="form-control" id="ClientPhone" name="ClientPhone" required />
        <span asp-validation-for="ClientPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ClientEmail">Имейл на клиент</label>
        <input type="email" class="form-control" id="ClientEmail" name="ClientEmail" required />
        <span asp-validation-for="ClientEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ClientCompanyId">Фирма на клиент (по избор)</label>
        <select class="form-control" asp-for="ClientCompanyId" asp-items="ViewBag.ClientCompanies">
            <option value="">Изберете фирма</option>
        </select>
        <span asp-validation-for="ClientCompanyId" class="text-danger"></span>
    </div>

    <!-- Полета за заявката -->
    <div class="form-group">
        <label for="RequestDate">Дата на заявка</label>
        <input type="date" class="form-control" id="RequestDate" name="RequestDate"  required />
        <span asp-validation-for="RequestDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="RequestType">Тип на заявка</label>
        <select class="form-control" asp-for="RequestType" asp-items="ViewBag.RequestTypes"></select>
        <span asp-validation-for="RequestType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Status">Статус на заявка</label>
        <select class="form-control" asp-for="Status" asp-items="ViewBag.Statuses"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Priority">Приоритет на заявка</label>
        <select class="form-control" asp-for="Priority" asp-items="ViewBag.Priorities"></select>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    

    <div class="form-group">
        <label for="ExpectedCompletionDate">Очаквана дата за приключване</label>
        <input type="date" class="form-control" id="ExpectedCompletionDate" name="ExpectedCompletionDate"   />
        <span asp-validation-for="ExpectedCompletionDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Device">Устройство</label>
        <input type="text" class="form-control" id="Device" name="Device" value="@Model.Device" required />
        <span asp-validation-for="Device" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Accessories">Аксесоари</label>
        <input type="text" class="form-control" id="Accessories" name="Accessories" value="@Model.Accessories" required />
        <span asp-validation-for="Accessories" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ProblemDescription">Описание на проблема</label>
        <textarea class="form-control" id="ProblemDescription" name="ProblemDescription">@Model.ProblemDescription</textarea>
        <span asp-validation-for="ProblemDescription" class="text-danger"></span>
    </div>

    <hr />

    <!-- Полета за служителя -->
    @* <h4>Данни за служителя</h4>
    <div class="form-group">
        <label for="EmployeeName">Име на служител</label>
        <input type="text" class="form-control" id="EmployeeName" name="EmployeeName" value="@Model.EmployeeName" readonly />
    </div>

    <div class="form-group">
        <label for="EmployeePhone">Телефон на служител</label>
        <input type="text" class="form-control" id="EmployeePhone" name="EmployeePhone" value="@Model.EmployeePhone" readonly />
    </div>

    <div class="form-group">
        <label for="EmployeeEmail">Имейл на служител</label>
        <input type="email" class="form-control" id="EmployeeEmail" name="EmployeeEmail" value="@Model.EmployeeEmail" readonly />
    </div> *@

    <button type="submit" class="btn btn-primary">Създай заявка</button>
</form>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    <script type="text/javascript">
        $(function () {
            $("#clientSearch").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '@Url.Action("FindClients", "Clients")', // Методът в контролера
                        data: { term: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return {
                                    label: item.name + " - " + item.phone + " - " + item.email, // Показва информация за клиента
                                    value: item.id, // ID на клиента
                                    name: item.name,
                                    phone: item.phone,
                                    email: item.email
                                };
                            }));
                        }
                    });
                },
                select: function (event, ui) {
                    $("#clientSearch").val(ui.item.label); // Показва информацията за клиента в полето за търсене
                    $("#ClientId").val(ui.item.value); // Записва ID-то на клиента в скритото поле
                    $("#ClientName").val(ui.item.name); // Попълва името на клиента
                    $("#ClientPhone").val(ui.item.phone); // Попълва телефона на клиента
                    $("#ClientEmail").val(ui.item.email); // Попълва имейла на клиента
                    return false;
                }
            });
        });
    </script>
}